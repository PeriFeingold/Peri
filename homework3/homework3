def encrypt_number(num):
    if num < 10:
        return num
    last_digit = num % 10
    remaining = num // 10

    num_digits = len(str(remaining)) #what does this mean

    encrypted = last_digit * (10 ** num_digits) + remaining
    return encrypted
print(encrypt_number(12345))


def oski_power(x,y):
    result = 1
    for _ in range(y):
        result *=x
    return(result)
print(oski_power(2,3))
