def weather_readings(readings):
    min_temp = min(readings)
    max_temp = max(readings)
    return(min_temp,max_temp)
readings = [76, 77, 75, 73, 70, 67]
tempurature_today = weather_readings(readings)
print("tempurate range for today", tempurature_today)

def is_weekend(day):
    if day == "6" or day == "7":
        return "true"
    elif  day == "1" or day == "2" or day == "3" or day == "4" or day == "5":
        return "false"
print(is_weekend("7"))

