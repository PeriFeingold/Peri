def minimum_value(nums):
    minimum_values = nums[0]
    for num in nums:
        if num < minimum_values:
            minimum_values = num
    return minimum_values
numbers = [3, 5, 6, 9, 2, 7]
print(minimum_value(numbers))

def maximum_value(nums):
    maximum_values= nums[0]
    for num in nums:
        if num > maximum_values:
            maximum_values = num
    return maximum_values
numbers = [3, 5, 6, 9, 2, 7]
print(maximum_value(numbers))

